extends ../layout 

block content 
    h1=title
    form(method='POST' action='')
        div
            label(for='name') Name
            input(type='text' name='name' value=(category == undefined ? '' : category.name))
        div
            label(for='description') Description
            input(type='text' name='description' value=(category == undefined ? '' : category.description))
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
        for error in errors
            li!= error.msg