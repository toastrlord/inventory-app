extends ../layout 

block content 
    h1=title 
    a(href='/item/update') Edit item 
    a(href='/item/delete') Delete item
    div
        p=item.name 
        p=item.description
        p Category:
            a(href=item.category.url) #{item.category.name}
        p Price: $#{item.price.toFixed(2)} 
        p Quantity Available: #{item.number_in_stock}
    